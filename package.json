{
	"name": "pebble-debug",
	"displayName": "Pebble Debug",
	"description": "Easily debug Pebble emulators.",
	"keywords": [
		"pebble"
	],
	"license": "public domain",
	"version": "0.0.1",
	"publisher": "blockarchitech",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.55.0"
	},
	"main": "./out/src/frontend/extension",
	"activationEvents": [
		"onCommand:pebble-debug.examineMemoryLocation",
		"onCommand:pebble-debug.getFileNameNoExt",
		"onCommand:pebble-debug.getFileBasenameNoExt"
	],
	"categories": [
		"Debuggers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/blockarchitech/pebble-debug.git"
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"contributes": {
		"commands": [
			{
				"command": "pebble-debug.examineMemoryLocation",
				"title": "Pebble-Debug: Examine memory location"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "pebble",
				"program": "./out/src/pebble.js",
				"runtime": "node",
				"label": "Pebble Emulator",
				"languages": [
					"c"
				],
				"variables": {
					"FileBasenameNoExt": "pebble-debug.getFileBasenameNoExt",
					"FileNameNoExt": "pebble-debug.getFileNameNoExt"
				},
				"configurationAttributes": {
					"launch": {
						"required": [
							"platform",
							"elfPath",
							"executablePath",
							"buildPath"
						],
						"properties": {
							"target": {
								"type": "string",
								"description": "Emulator platform to debug."
							},
							"elfPath": {
								"type": "string",
								"description": "Path to the ELF file to debug."
							},
							"executablePath": {
								"type": "string",
								"description": "Path to the executable file to debug."
							},
							"buildPath": {
								"type": "string",
								"description": "Path to the build directory."
							}
						}
					},
					"attach": {
						"required": [
							"platform",
							"executablePath",
							"buildPath",
							"elfPath"
						],
						"properties": {
							"target": {
								"type": "string",
								"description": "Emulator platform to debug."
							},
							"elfPath": {
								"type": "string",
								"description": "Path to the ELF file to debug."
							},
							"executablePath": {
								"type": "string",
								"description": "Path to the executable file to debug."
							},
							"buildPath": {
								"type": "string",
								"description": "Path to the build directory."
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "Debug Basalt",
						"type": "pebble",
						"request": "launch",
						"platform": "basalt",
						"elfPath": "${workspaceFolder}/build/basalt/pebble-app.elf",
						"executablePath": "${workspaceFolder}/build/basalt/pebble-app.bin",
						"buildPath": "${workspaceFolder}/build"
					}
				],
				"configurationSnippets": [
					{
						"label": "Pebble: Launch Basalt",
						"description": "Starts a new Basalt emulator and connects to it",
						"body": {
							"type": "pebble",
							"request": "launch",
							"name": "${2:Launch Basalt}",
							"platform": "basalt",
							"elfPath": "${1:/path/to/your/elf}",
							"executablePath": "${1:/path/to/your/exec}",
							"buildPath": "${1:/path/to/your/build}"
						}
					}
					
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"test": "mocha",
		"coverage": "nyc npm test",
		"compile": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts --format compact",
		"lint-and-fix": "eslint . --ext .ts --fix --format compact",
		"spellcheck-docs": "cspell lint **/*.md",
		"lint-docs": "markdownlint **/*.md",
		"link-check": "markdown-link-check *.md",
		"prettier-write-docs": "prettier --write **/*.md",
		"prettier-check-docs": "prettier --check **/*.md"
	},
	"dependencies": {
		"ssh2": "^1.6.0",
		"vscode-debugadapter": "^1.45.0",
		"vscode-debugprotocol": "^1.45.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.11.3",
		"@types/ssh2": "^1.15.0",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"cspell": "^6.0.0",
		"eslint": "^8.14.0",
		"eslint-plugin-deprecation": "^1.3.2",
		"eslint-plugin-no-null": "^1.0.2",
		"markdown-link-check": "^3.10.3",
		"markdownlint-cli": "^0.31.1",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0",
		"prettier": "^2.6.2",
		"ts-node": "^10.8.0",
		"typescript": "^4.3.2"
	},
	"__metadata": {
		"id": "2fd22b8e-b3b8-4e7f-9a28-a5e2d1bdd0d4",
		"publisherDisplayName": "blockarchitech",
		"publisherId": "3ad98fdc-4d7d-6302-8fae-a66a35eacb89"
	}
}
